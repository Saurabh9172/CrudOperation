@model IEnumerable<CrudOp.Models.Person>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Person List</h2>
<a asp-controller="Person" asp-action="Create" class="btn btn-primary">Add New Person</a>




<table class="table table-bordered">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Mobile No</th>
        <th>Email</th>
        <th>Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
            <td>@item.MobileNo</td>
            <td>@item.Email</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
</table>
